<% content_for :head do %>
<title>UI5- progress</title>
<% end %>

<h1>Progress Bars</h1>
<hr class="rule">

<br>

<section>
  <div class="grid">
    <div class="row">
      <div span=4>
        <div id="progress1">
          <div class="progress-bar" color="blue" striped="animate">
            <div class="bar" style="width: 60%"></div>
          </div>
        </div>
      </div>
      <div span=8>
        <pre class="brush: html" from="#progress1"></pre>
      </div>
    </div>
  </div>
</section>

<section>
  <h2>Colors</h2>
  <table class="table" bordered="col header-row" width="100%">
    <thead>
    <tr>
      <th width="300">Progress</th>
      <th><code>color="*"</code></th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td>
        <div class="progress-bar">
          <div class="bar" style="width: 20%"></div>
        </div>
      </td>
      <td>

      </td>
    </tr>
    <tr>
      <td>
        <div class="progress-bar" color="blue">
          <div class="bar" style="width: 30%"></div>
        </div>
      </td>
      <td>
        <code>blue</code>
      </td>
    </tr>
    <tr>
      <td>
        <div class="progress-bar" color="green">
          <div class="bar" style="width: 40%"></div>
        </div>
      </td>
      <td>
        <code>green</code>
